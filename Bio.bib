@article{hamilton_stream_2022,
	title = {From {Stream} {Flows} to {Cash} {Flows}: {Leveraging} {Evolutionary} {Multi}‐{Objective} {Direct} {Policy} {Search} to {Manage} {Hydrologic} {Financial} {Risks}},
