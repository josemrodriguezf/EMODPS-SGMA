@article{perez-blanco_actionable_2021,
	title = {An actionable hydroeconomic {Decision} {Support} {System} for the assessment of water reallocations in irrigated agriculture. {A} study of minimum environmental flows in the {Douro} {River} {Basin}, {Spain}},
